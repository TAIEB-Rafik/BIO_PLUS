{% extends 'baseadmin.html.twig' %}

{% block title %}Nouvel Utilisateur{% endblock %}

{% block body %}
	<div class="container form_registration">
	<h1 class="mt-1 text-center font-weight-bold h2">Créer un nouvel utilisateur</h1>
		{{ form_start(form) }}
			{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.gender, {'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.birthday, {'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
			{{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
			<div class="row justify-content-center">
				<div class="col-md-4 col-sm-8 col-8">
					<button type="submit" class="btn btn-lg btn-primary mt-4 mb-10" style="width:100%">Créer !</button>
				</div>
			</div>
		{{ form_end(form) }}
	</div>


<style>
	.form_registration label{
		font-weight: bold;
		margin-top : 10px;
	}

</style>


{% endblock %}


